# File name: Project File.py
#: import SlideTransition kivy.uix.screenmanager.SlideTransition

ScreenManagement:
	MainScreen:
	SettingsScreen:

<MainScreen>:
	btn_l: btn_lane
	btn_c: btn_cruise
	name: "main"

	Button:
		text: "Settings"
		size_hint: (1/3), .1
		pos_hint: {'x': (2/3), 'center_y': .95}
		on_release: 
			app.root.current = "settings"
			root.manager.transition.direction = 'left'

			

	Button:
		id: btn_cruise
		text: "Cruise Control: Off"
		size_hint: [.5,.1]
		pos_hint: {'x': 0, 'center_y': .05}
		on_press: root.Cruise_Control_Button()

	Button:
		id: btn_lane
		text: "Lane Assist : Off"
		size_hint: [.5,.1]
		pos_hint: {'x': .5, 'center_y': .05}
		on_press: root.Lane_Assist_Button()


<SettingsScreen>:
	name: "settings"
	Button:
		on_release: 
			app.root.current = "main"
			root.manager.transition.direction = 'right'

		text: "Back"
		size_hint: [.25,.1]
		pos_hint: {'x': .75, 'center_y': .95}
		