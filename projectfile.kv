# File name: Project File.py
#: import FadeTransition kivy.uix.screenmanager.FadeTransition

ScreenManagement:
	transition: FadeTransition()
	MainScreen:
	SettingsScreen:

<MainScreen>:
	btn_l: btn_lane
	btn_c: btn_cruise
	name: "main"

	Button:
		text: "Settings"
		size_hint: (1/3), .1
		pos_hint: {'x': (2/3), 'center_y': .95}
		on_release: app.root.current = "settings"
		on_press: print(args)

	Button:
		id: btn_cruise
		text: "Cruise Control: Off"
		size_hint: [.5,.1]
		pos_hint: {'x': 0, 'center_y': .05}
		on_press: root.Cruise_Control_Button()

	Button:
		id: btn_lane
		text: "Lane Assist : Off"
		size_hint: [.5,.1]
		pos_hint: {'x': .5, 'center_y': .05}
		on_press: root.Lane_Assist_Button()


<SettingsScreen>:
	name: "settings"
	Button:
		on_release: app.root.current = "main"
		text: "Back"
		